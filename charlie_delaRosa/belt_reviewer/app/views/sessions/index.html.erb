<h2>Welcome!</h2>
  <div class="register">
    <h3>Register</h3>
    <form class="register_form" action="users" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <label for="">First Name:</label>
      <input type="text" name="register[first_name]" value="">
      <label for="">Last Name:</label>
      <input type="text" name="register[last_name]" value="">
      <label for="">Email:</label>
      <input type="text" name="register[email]" value="">
      <label for="">Location:</label>
      <input type="text" name="register[city]" value="">
      <select class="" name="register[state]">
        <% IO.foreach('states.txt') do |line| %>
          <option value="<%= line.strip %>"><%=line%></option>
        <% end %>
      </select>
      <label for="">Password:</label>
      <input type="password" name="register[password]" value="">
      <p>Password should be at least 8 characters</p>
      <label for="">Confirm Password:</label>
      <input type="password" name="register[password_confirmation]" value="">
      <input type="submit" name="submit" value="Register">
    </form>
  </div>

  <div class="login">
    <h3>Login</h3>
    <form class="login_form" action="sessions" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <label for="">Email:</label>
      <input type="text" name="login[email]" value="">
      <label for="">Password:</label>
      <input type="password" name="login[password]" value="">
      <input type="submit" name="submit" value="Login">
    </form>
  </div>
