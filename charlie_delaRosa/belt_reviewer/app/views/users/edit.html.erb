<h1>Edit</h1>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<form class="" action='/users/<%= @user.id %>' method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="patch">
  <label for="">First Name:</label>
  <input type="text" name="user[first_name]" id="first_name" value="<%= @user.first_name %>">
  <label for="">Last Name:</label>
  <input type="text" name="user[last_name]" id="last_name" value="<%= @user.last_name %>">
  <label for="">Email:</label>
  <input type="text" name="user[email]" id="email" value="<%= @user.email %>">
  <label for="">Location:</label>
  <input type="text" name="user[city]" value="<%= @user.city %>">
  <select class="" name="user[state]">
    <% IO.foreach('states.txt') do |line| %>
      <option value="<%= line.strip %>"><%=line%></option>
    <% end %>
  </select>
  <label for="">Password:</label>
  <input type="password" name="user[password]" value="<%= @user.password %>">
  <p>Password should be at least 8 characters</p>
  <input type="submit" name="edit_profile" value="Update Records">
</form>
