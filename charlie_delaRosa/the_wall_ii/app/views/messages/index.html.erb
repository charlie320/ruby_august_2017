<h2>Coding Dojo Wall</h2>
<h2>Welcome <%= @user.username %></h2>

<%= link_to "Lot Out", "/logout", data: { method: :delete, confirm: "Are you sure?"} %>

<h1>Post a message</h1>
<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p><% e %></p>
  <% end %>
<% end %>
<p>This is a test message for the assignment.</p>
<form class="" action="/messages" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <textarea name="message[content]" id="message" rows="10" cols="60"></textarea>
  <input type="submit" name="" value="Post a Message">
</form>

<% @messages.each do |message| %>
  <h2><%= "#{message.user.username} - #{message.created_at.strftime("%B #{message.created_at.day.ordinalize}, %Y")}" %></h2>
  <p><%= message.content %></p>
<% end %>
