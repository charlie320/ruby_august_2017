
<h1>Register</h1>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<form class="" action="/users" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="">Name:</label>
  <input type="text" name="users[name]" value="">
  <label for="">Email:</label>
  <input type="text" name="users[email]" value="">
  <label for="">Password:</label>
  <input type="text" name="users[password]" value="">
  <label for="">Password Confirmation</label>
  <input type="text" name="users[password_confirmation]" value="">
  <input type="submit" name="join" value="Join">
</form>
